#include <iostream>

#include "AnimalsInZoo.h"

using namespace std;

AnimalsInZoo :: AnimalsInZoo(Animal a){
  animal = a;
  numAnimals = 1;
}

AnimalsInZoo :: AnimalsInZoo(){
  numAnimals = 0;
}

void AnimalsInZoo::display(){
  if(numAnimals == 1)
    {
      cout << "numAnimals: 1" << endl;
      animal.display();
    }
  else
    {
      cout<< "numAnimals: 0" << endl;
    }
}
